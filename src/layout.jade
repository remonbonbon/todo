//- define mixins
mixin useCss(path)
	link(rel="stylesheet" href="#{path}")

mixin useScript(path)
	script(src="#{path}")

//- template
doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width,initial-scale=1")
		block head
	body
		block content
		block scripts
